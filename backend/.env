# 环境变量配置文件

# 环境
ENV=development

# 数据库配置
# 开发环境使用SQLite，生产环境使用MySQL
DATABASE_URL=sqlite:///./hr_recruitment.db
# 生产环境配置示例
# DATABASE_URL=mysql+pymysql://root:password@localhost:3306/hr_recruitment

# 安全配置
SECRET_KEY=hr_recruitment_secret_key_for_development

# OpenAI API配置
OPENAI_API_KEY=your_openai_api_key_here

# 服务配置
# 设置为True使用模拟服务，适用于开发和测试环境
MOCK_SERVICES=True
